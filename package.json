{
  "name": "svg-color-linter",
  "displayName": "SVG Color Linter",
  "version": "1.3.1",
  "description": "Linting tool to check if SVG files use only colors of a given color palette",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "bin": {
    "svg-color-linter": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "lint": "npx @biomejs/biome check --write ./src",
    "format": "npx @biomejs/biome format --write ./src",
    "changelog": "npx changelog-machine --config changelog.config.json",
    "prepublish": "npm run build",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "files": ["lib/"],
  "keywords": ["SVG", "Linter", "Colors"],
  "engines": {
    "node": ">=4.2.0"
  },
  "author": {
    "name": "Philipp Kief",
    "email": "philipp.kief@gmx.de",
    "url": "https://pkief.com"
  },
  "funding": "https://github.com/sponsors/pkief",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PKief/svg-color-linter/issues"
  },
  "homepage": "https://github.com/PKief/svg-color-linter/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PKief/svg-color-linter.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/chroma-js": "^2.4.4",
    "@types/glob": "^8.1.0",
    "@types/is-glob": "^4.0.4",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/minimist": "^1.2.5",
    "changelog-machine": "^1.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "glob": "^10.4.2",
    "is-glob": "^4.0.3",
    "is-svg": "^5.0.1",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.8"
  }
}
