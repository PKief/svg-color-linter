{
  "name": "svg-color-linter",
  "displayName": "SVG Color Linter",
  "version": "1.3.1",
  "description": "Linting tool to check if SVG files use only colors of a given color palette",
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "bin": {
    "svg-color-linter": "./bin/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "lint": "bunx --bun @biomejs/biome check --write ./src",
    "format": "bunx --bun @biomejs/biome format --write ./src",
    "changelog": "npx changelog-machine --config changelog.config.json",
    "prepublish": "npm run build",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "files": [
    "lib/"
  ],
  "keywords": [
    "SVG",
    "Linter",
    "Colors"
  ],
  "engines": {
    "node": ">=4.2.0"
  },
  "author": {
    "name": "Philipp Kief",
    "email": "philipp.kief@gmx.de",
    "url": "https://pkief.com"
  },
  "funding": "https://github.com/sponsors/pkief",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PKief/svg-color-linter/issues"
  },
  "homepage": "https://github.com/PKief/svg-color-linter/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PKief/svg-color-linter.git"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/chroma-js": "^2.1.3",
    "@types/glob": "^7.2.0",
    "@types/is-glob": "^4.0.2",
    "@types/jest": "^27.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/minimist": "^1.2.2",
    "changelog-machine": "^1.0.2",
    "jest": "^27.5.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "chroma-js": "^2.2.0",
    "glob": "^7.2.0",
    "is-glob": "^4.0.3",
    "is-svg": "^4.3.2",
    "js-yaml": "^4.1.0",
    "minimist": "^1.2.5"
  }
}
