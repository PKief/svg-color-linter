{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./lib/",
    "moduleResolution": "Node"
  },
  "include": ["./src"],
  "exclude": ["**/*.spec.ts"]
}
